{% extends 'base.html' %}
{% block content %}
<h2 class="text-center pt-2">Results of poll '{{poll.title}}' <span class="badge badge-secondary">Poll completed</span></h2>
<div class="bg-light card card-body w-50 mx-auto p-2 m-2">
Invite people by sharing the poll url: <a href="{{poll_url}}">{{poll_url}}</a>
</div>

    <table class="table table-bordered table-striped table-sm mx-auto" style="width: auto;">
        <thead>
            <tr>
                <th class="text-center">
                    Alternative
                </th>
                <th class="text-center">
                    Score
                </th>
            </tr>
        </thead>

        <tbody>
            {% for alternative in alternatives %}
                <tr>
                    <td class="text-center">
                        <a href="{{alternative.link}}" target="_blank">{{alternative.title}}</a>
                    </td>
                    <td class="text-center">
                        {{alternative.score}}
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}
