{% extends 'base.html' %}
{% block header %}
<h2>Cast your vote in poll '{{poll.title}}'</h2>
{% endblock %}
{% block content %}
<form action="{{url_for('vote.cast', poll_id=poll.id)}}" method="post">
    <table>
        <thead>
            <tr>
                <th>
                    Alternative
                </th>
                <th>
                    Vote
                </th>
            </tr>
        </thead>

        <tbody>
            {% for alternative in poll.alternatives %}
                <tr>
                    <td>
                        <a href="{{alternative.link}}" target="_blank">{{alternative.title}}</a>
                    </td>
                    <td>
                        <label>
                            :)
                            <input type="radio" value="1" name="{{alternative.id}}"/>
                        </label>
                        <label>
                            :(
                            <input type="radio" value="-1" name="{{alternative.id}}"/>
                        </label>
                        <label>
                            :|
                            <input type="radio" value="0" name="{{alternative.id}}"/>
                        </label>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>

    <input type="submit" value="Submit your vote" />
</form>
{% endblock %}
