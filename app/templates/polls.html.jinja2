{% extends 'base.html' %}
{% block header %}
<h1>Polls</h1
{% endblock %}


{% block content %}

<a class="btn btn-primary m-2 p-2 d-flex justify-content-center" href="{{url_for('poll.create_poll')}}">Create poll</a>

{% if created_polls %}
<h2 class="d-flex justify-content-center bg-dark">Polls created by you</h2>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Created at
            </th>
            <th>
                Voting start
            </th>
            <th>
                Voting end
            </th>
        </tr>
    </thead>

    <tbody>
        {% for poll in created_polls %}
            <tr>
                <td>
                    <a href="{{url_for('poll.show_poll', poll_id=poll.id)}}">{{poll.title}}</a>
                    <form action="{{url_for('poll.list_polls')}}" method="post">
                        <input name="poll" value="{{poll.id}}" type="hidden" />
                        <input name="delete" value="true" type="hidden" />
                        <input type="submit" value="Delete">
                    </form>
                </td>
                <td>
                    {{poll.created_at.strftime('%Y-%m-%d')}}
                </td>
                <td>
                    {% if poll.voting_start is none %}
                    Voting has not started.
                    {% else %}
                    {{poll.voting_start.strftime('%Y-%m-%d')}}
                    {% endif %}
                </td>
                <td>
                  {% if poll.voting_end is none %}
                  {% else %}
                  {{poll.voting_end.strftime('%Y-%m-%d')}}
                  {% endif %}
                </td>

            </tr>
        {% endfor %}
    </tbody>

</table>
{% endif %}

