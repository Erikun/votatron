{% extends 'base.html' %}
{% block content %}
<h2 class="text-center pt-2">Nominate for poll '{{poll.title}}' <span class="badge badge-primary">Nominating in progress</span></h2>
<form class="mx-sm-3 mb-2 p-2" action="{{url_for('nominate.nominate_alternative', poll_id=poll.id)}}" method="post">
    <div class="p-1 form-group row">
        <label for="Title">Title:</label>
        <input class="form-control" type="text" id="title" name="title">
    </div>
    <div class="p-1 form-group row">
        <label for="link">Link:</label>
        <input class="form-control" type="url" id="link" name="link">
    </div>
    <div class="form-group row">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
{% endblock %}
